package sbnz.integracija;

import model.Patient;

rule "Patient has fever"
	when
		$p: Patient(lastFever < 37.3)
	then
		$p.setRiskOfCovid(Patient.Risk.LOW);
		update($p);
end

rule "Patient has cough"
	when
		$p: Patient(cough == false)
	then
		$p.setRiskOfCovid(Patient.Risk.LOW);
		update($p);
end

